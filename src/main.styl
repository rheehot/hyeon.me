// Always use border-box
* { box-sizing: border-box }

// Custom markdown style
.markdown-body small { color: gray }

// Rounded DOM
.rounded
  border-radius: 5px
  overflow: hidden

// 'private' and 'shit' button
button(text, fg, bg)
  display: inline-block
  padding: 4px 5px 3px
  font-size: 11px
  font-weight: 300
  line-height: 11px
  border-radius: 3px
  font-style: normal
  content: text
  color: fg
  background-color: bg

i.private:after
  button('PRIVATE', #a1882b, #ffefc6);
i.shit:after
  button('SHIT', #702BA1, #EAC6FF);

//
// Layout
//
width = 890px
padding = 20px
mobile = 600px

// Hide github corner on small screen
@media (max-width: mobile)
  .github-corner { display: none }

article#main
  max-width: width
  margin: 0 auto
  padding: 20px padding

  > h1 > img
    margin-bottom: -10px
    border-radius: 100%

  @media (max-width: mobile)
    > p > img { width: 80px }
